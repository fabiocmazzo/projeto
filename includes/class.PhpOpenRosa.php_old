   function removeJr($string) {
   	
   	return str_replace("')","", str_replace("jr:itext('", "", $string));
   	
   	
   }


  function getLabel($texts, $attribute) {
  	 foreach($texts as $text) {
  	 	if($text->attributes()->id[0] == $attribute) {
  	 	  return $text->value;	
  	 	}
  	 }
  } 
  
